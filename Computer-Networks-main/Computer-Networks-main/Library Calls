	struct mymsg
	{
		long type;
		char msg[20];
	};

	struct mymsg msg1;
	key_t  key;
	int    mqpid;
	int    ret;
	int    len;
	system("touch f1.txt");
	if((key=ftok("f1.txt",'B')) == -1)
	{
		perror("key");
		exit(1);
	}
	if((mqpid=msgget(key,0644|IPC_CREAT))==-1)
	{
		perror("Key");
		exit(1);
	}
	
	if(msgsnd( mqpid ,&msg1 ,len+1 , 0) == -1)
	{
		perror("msgsnd");
		exit(1);
	}

	memset(msg1.msg,'\0',sizeof(msg1.msg));
	if(msgrcv( mqpid , &msg1 , sizeof(msg1.msg),1 ,0) == -1)
	{
		perror("msgrcv");
		exit(1);
	}	
